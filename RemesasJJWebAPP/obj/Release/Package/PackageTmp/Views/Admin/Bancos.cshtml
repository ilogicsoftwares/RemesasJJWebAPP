
@{
    Layout = null;
}
<div>
    <h1>Bancos</h1>
    <form name="form1" class="col-sm-6">
        <div class="form-group">
            <p>
                <label>Tipo De Banco</label>
                <select class="w3-select" name="option" ng-change="enableFuncs()" ng-init="cuentaTrans=tipoBanco[0]" ng-model="cuentaTrans" ng-options="item as item.nombre for item in tipoBanco track by item.id" required>
                    <option value="null" disabled selected>Seleccione tipo de Banco</option>
                </select>
            </p>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Nombre del Banco</label>
            <input ng-model="banco.nombre" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <p>
                <label>Tipo de Cuenta</label>
                <select ng-disabled="cuentaTrans.id<=1" class="w3-select" name="option" ng-model="banco.cuentaType" ng-options="item.id as item.nombre for item in cuentas track by item.id" >
                    <option value="null" disabled selected>Selecciones tipo de Cuentas</option>
                </select>
            </p>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Numero de Cuenta</label>
            <input ng-disabled="cuentaTrans.id<=1" ng-model="banco.cuentaNumero" type="text" class="form-control" id="exampleInputPassword1" >
        </div>
        <div class="form-group">
            <p>
                <label>Tipo de Moneda</label>
                <select ng-disabled="cuentaTrans.id<=1" class="w3-select" name="option" ng-model="banco.monedaID" ng-options="item.id as item.nombre for item in monedas track by item.id" >
                    <option value="null" disabled selected>Selecciones tipo de Moneda</option>

                </select>
            </p>
        </div>
        <button ng-click="saveBanco($event)" class="btn btn-primary">{{btnEstatus}}</button>
        <button ng-click="CancelBanco()" class="btn btn-secondary">Cancelar</button>
        
    </form>
</div>
<div class="w3-container w3-margin-top">
    <div style="max-height:300px;overflow-y:scroll;">
        <div class="w3-container">

            <table class="w3-table-all w3-margin-top ">
                <tr>
                    <th>ID</th>
                    <th>NOMBRE</th>
                    <th>CUENTA NUMERO</th>
                    <th>TIPO DE CUENTA</th>
                    <th>MONEDA</th>
                    <th>ELIMINAR</th>
                </tr>
                <tr ng-repeat="item in bancos">
                    <td>{{item.id}}</td>
                    <td>{{item.nombre}}</td>
                    <td>{{item.cuentaNumero}}</td>
                    <td>{{item.tipoCuenta}}</td>
                    <td>{{item.moneda}}</td>
                    <td><a href="" ng-click="EliminarBanco(item)">Eliminar</a></td>
                </tr>

            </table>

        </div>
    </div>
</div>
    <script>
        var cambio=@Html.Raw(ViewBag.cambio);

    </script>

