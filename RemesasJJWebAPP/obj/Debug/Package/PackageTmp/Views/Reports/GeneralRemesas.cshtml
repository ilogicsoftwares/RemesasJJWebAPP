
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
   
</head>
<body>
   
    <div class="container">
        
        <div class="row" id="controls">

            <button class="btn btn-default btn-sm pull-right no-print" onclick="window.print()" value="+" style="font-weight:bold;font-size:medium" title="Imprimir">
                <span class="glyphicon glyphicon-print"></span>
            </button>

        </div>
        <div class="row">
            <p class="pull-right">{{fecha}}</p>
        </div>
        <div class="row">
            <h1 style="text-decoration:underline" class="text-center">Reporte General Diario</h1>
        </div>
        <div id="content" class="row">

            <div id="totalesBancos">
                <h3>Totales Bancarios</h3>
                <div class="col-xs-8">
                    <ul>
                        <li ng-repeat="banco in Totals">{{banco.banco + "" + banco.cuenta}}</li>
                    </ul>
                </div>
                <div class="col-xs-3">
                    <ul>
                        <li style="list-style-type:none" ng-repeat="banco in Totals" class="text-right">{{banco.sing}}{{banco.total | currencyde:"":2}}</li>
                    </ul>
                </div>
             
            </div>
           
            <div id="totalesResumen">
                <h3>Resumen Día</h3>
                <div class="col-xs-8">
                    <ul >
                        <li ng-repeat="total in Ftotals">Total Depositos {{total.sing}} : </li>
                        <li>Total Depositos General $({{cambio}}):</li>
                        <li>Precios de Compra Bs.:</li>
                        <li>Total Bs. Enviar:</li>
                        <li>Monto de Venta $:</li>
                        <li>Precios de Venta Bs.:</li>
                        <li>Total Venta Bs.:</li>
                        <li>Ganancia Aprox. Bs.:</li>
                        <li>Ganancia Aprox. $.:</li>
                        <li>Total General Procesado Bs.:</li>
                    </ul>
                </div>
               
                <div class="col-xs-3">
                    <ul style="list-style-type:none"  class="text-right">
                        
                        <li  ng-repeat="total in Ftotals">{{total.total | currencyde:"":2}}</li>
                        <li><strong>{{totalDo | currencyde:"":2}}</strong></li>
                        <li>{{precioCompra | currencyde:"":2}}</li>
                        <li><strong>{{(precioCompra * totalDo) | currencyde:"":2}}</strong></li>
                        <li>{{montoVenta | currencyde:"":2}}</li>
                        <li>{{precioVenta | currencyde:"":2}}</li>
                        <li><strong>{{(precioVenta * montoVenta)| currencyde:"":2}}</strong></li>
                        <li><strong>{{(precioVenta * montoVenta) - (precioCompra * totalDo) | currencyde:"":2}}</strong></li>
                        <li><strong>{{((precioVenta * montoVenta) - (precioCompra * totalDo))/precioCompra | currencyde:"":2}}</strong></li>
                        <li>{{totalEnviado | currencyde:"":2}}</li>
                    </ul>
                </div>
            </div>

        </div>

    </div>
 
</body>

</html>
