
@{
    Layout = null;
}
<div style="max-height:600px;overflow-y:auto;">
    <h1>Usuarios</h1>

    <form name="form1" class="col-sm-6">

        <div class="form-group">
            <label for="exampleInputPassword1">Nombre de Usuario</label>
            <input ng-model="user.nombre" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Clave de Usuario</label>
            <input ng-model="user.clave" type="password" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Repetir Clave de Usurio</label>
            <input ng-model="userKeyRepeat" type="password" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <p>
                <label>Rol</label>
                <select class="w3-select" name="option" ng-init="rol=tipoBanco[0]" ng-model="rol" ng-options="item as item.name for item in roles track by item.id" required>
                    <option value="null" disabled selected>Seleccione tipo de Banco</option>
                </select>
            </p>
        </div>
       
        <div class="form-group">
            <label for="exampleInputPassword1">Nombre / Razon Social</label>
            <input ng-model="user.nombrex" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>


        <div class="form-group">
            <label for="exampleInputPassword1">Dni / Ruc</label>
            <input ng-model="user.dni" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Telefonos</label>
            <input ng-model="user.telefonos" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Correo</label>
            <input ng-model="user.correo" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Dirección</label>
            <input ng-model="user.direccionEntrega" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>
      
        <button ng-click="saveUser($event)" class="btn btn-primary">{{btnEstatus}}</button>
        <button ng-click="cancelUser()" class="btn btn-secondary">Cancelar</button>

    </form>
</div>
<div class="w3-container w3-margin-top">
    <div style="max-height:300px;overflow-y:auto;">
        <div class="w3-container">

            <table class="w3-table-all w3-margin-top ">
                <tr>
                    <th>ID</th>
                    <th>NOMBRE DE USUARIO</th>
                    <th>CORREO</th>
                    <th>NOMBRE COMPLETO</th>
                    <th>ROL</th>
                    <th>ELIMINAR</th>
                </tr>
                <tr ng-repeat="item in usuarios">
                    <td>{{item.id}}</td>
                    <td>{{item.nombre}}</td>
                    <td>{{item.correo}}</td>
                    <td>{{item.nombrex}}</td>
                    <td>{{item.rolName}}</td>
                    <td><a href="" ng-click="EliminarUsuario(item)">Eliminar</a></td>
                </tr>

            </table>

        </div>
    </div>
</div>
<script>
        var cambio=@Html.Raw(ViewBag.cambio);

</script>

