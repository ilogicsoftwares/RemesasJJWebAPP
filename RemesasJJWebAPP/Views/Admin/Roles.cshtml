
@{
    Layout = null;
}
<div>
    <h1>Roles</h1>
    <form name="form1" class="col-sm-6">

        <div class="form-group">
            <label for="exampleInputPassword1">Rol</label>
            <input ng-model="newRole" type="text" class="form-control" id="exampleInputPassword1" required>
        </div>

        <div class="container" style="max-height:500px;overflow-y:scroll;">
            <h2>Permisos de Usuario</h2>
            <p>Seleccione uno o varios permisos</p>
            
                <div class="checkbox" ng-repeat="item in accesos">
                    <label><input type="checkbox" ng-model="item.active" ng-true-value="1">{{item.nombre}}</label>
                </div>
               
               
         
        </div>
        <button ng-click="saveRole($event)" class="btn btn-primary">{{btnEstatus}}</button>
        <button ng-click="Actualizar()" class="btn btn-secondary">Cancelar</button>

    </form>
</div>
<div class="w3-container w3-margin-top">
    <div style="max-height:300px;overflow-y:scroll;">
        <div class="w3-container">

            <table class="w3-table-all w3-margin-top ">
                <tr>
                    <th>ID</th>
                    <th>Rol</th>
                    <th>Eliminar</th>
                </tr>
                <tr ng-repeat="item in roles">
                    <td><a href="" ng-click="EditarRol(item.id)">{{item.id}}</a></td>
                    <td>{{item.name}}</td>
                     <td><a href="" ng-click="deleRole(item.id)">Eliminar</a></td>
                </tr>

            </table>

        </div>
    </div>
</div>
<script>
        var cambio=@Html.Raw(ViewBag.cambio);

</script>

